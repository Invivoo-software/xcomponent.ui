                                Opacity="0.5" ContentTemplate="{TemplateBinding suggest1:AutoCompleteSearchTextBox.WatermarkTemplate}" Grid.Row="0" Grid.Column="0"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
